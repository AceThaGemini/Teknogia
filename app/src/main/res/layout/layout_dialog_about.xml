<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFF"
    android:orientation="vertical">


    <creationsofali.teknogia.appfonts.DroidSansTextView
        android:id="@+id/textAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/color_primary_green"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="@string/app_name"
        android:textColor="#FFFF"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/cardButtonUsingGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:clickable="false">

        <creationsofali.teknogia.appfonts.DroidSansTextView
            android:id="@+id/labelVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:text="Version"
            android:textColor="@color/color_secondary_text"
            android:textSize="14sp" />

        <creationsofali.teknogia.appfonts.DroidSansTextView
            android:id="@+id/textVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/labelVersion"
            android:layout_toEndOf="@id/labelVersion"
            android:text="0.0.0"
            android:textColor="@color/color_primary_text"
            android:textSize="14sp" />
    </RelativeLayout>


    <creationsofali.teknogia.appfonts.DroidSansTextView
        android:id="@+id/textRights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="Copy Right 2017. All Rights Reserved"
        android:textColor="@color/color_primary_text"
