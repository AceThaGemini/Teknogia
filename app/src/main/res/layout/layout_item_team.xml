<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardMuhuni"
    android:layout_width="180dp"
    android:layout_height="224dp"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"

    app:cardBackgroundColor="@color/color_white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutDp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_grey"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:paddingTop="24dp">

            <android.support.v7.widget.CardView
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:cardBackgroundColor="@color/color_accent_red"
                app:cardCornerRadius="48dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageDp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:transitionName="@string/shared_image_dp" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:padding="8dp">

            <creationsofali.teknogia.appfonts.DroidSansTextView
                android:id="@+id/textName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Doe"
                android:textColor="@color/color_primary_text"
                android:textSize="15sp" />

            <creationsofali.teknogia.appfonts.DroidSansTextView
                android:id="@+id/textWhoIsHe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textName"
                android:layout_centerHorizontal="true"
                android:text="Who is he in the crew"
                android:textColor="@color/color_secondary_text"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconEmail"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_email_variant"
                    android:tint="@color/selector_color_red_white" />

                <ImageView
                    android:id="@+id/iconPhone"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_phone_iphone"
                    android:tint="@color/selector_color_green_white" />

                <ImageView
                    android:id="@+id/iconTwitter"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_twitter"
                    android:tint="@color/selector_color_blue_white" />

                <ImageView
                    android:id="@+id/iconInstagram"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="4dp"
                    android:padding="4dp"
                    android:src="@drawable/ic_instagram"
                    android:tint="@color/selector_color_purple_white" />

                <!--<ImageView-->
                <!--android:layout_width="24dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_marginEnd="2dp"-->
                <!--android:padding="2dp"-->
                <!--android:src="@drawable/ic_facebook"-->
                <!--android:tint="@color/selector_color_green_white" />-->
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
